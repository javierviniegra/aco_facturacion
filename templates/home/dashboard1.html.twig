{% extends '@SonataAdmin/standard_layout.html.twig' %}

{% block title %}
    {{ 'title_dashboard'|trans({}, 'SonataAdminBundle') }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .sonata-ba-content{      
            min-height: xxx;
            overflow: hidden;
        }
    </style>
{% endblock %}

{% block breadcrumb %}
    <div class="hidden-xs">
        <ol class="nav navbar-top-links breadcrumb">
            <li>
                <a href="/admin">
                    <i class="fa fa-home"></i>
                </a>
            </li>
            <li class="active">
                <span>Dashboard 2</span>
            </li>
        </ol>
    </div>
{% endblock %}

{% block javascripts %}    
    {{ parent() }}
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
        {{ gc_draw(grafica1, 'div_grafica1') }}
        {{ gc_draw(grafica2, 'div_grafica2') }}
        {{ gc_draw(grafica3, 'div_grafica3') }}
    </script>
{% endblock %}

{% block content %}

    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header">
                <h4 class="box-title">Compras</h4>
            </div>
            <div class="box-body">
                <div class="sonata-ba-collapsed-fields">
                    <div id="" class="form-group">
                        <label class="  control-label" for="reporteDia">Combustibles</label>
                        <div class="sonata-ba-field sonata-ba-field-standard-natural">
                            <div id="div_grafica1"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header">
                <h4 class="box-title">Reporte por Periodo</h4>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="box-body">
                        <div class="sonata-ba-collapsed-fields">
                            <div id="" class="form-group">
                                <label class="  control-label" for="reporteDia">Magna vs. Diesel</label>
                                <div class="sonata-ba-field sonata-ba-field-standard-natural">
                                    <div id="div_grafica2"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="box-body">
                        <div class="sonata-ba-collapsed-fields">
                            <div id="" class="form-group">
                                <label class="  control-label" for="reporteDia">Venta por Clientes</label>
                                <div class="sonata-ba-field sonata-ba-field-standard-natural">
                                    <div id="div_grafica3"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


{% block footer %}
{% endblock %}