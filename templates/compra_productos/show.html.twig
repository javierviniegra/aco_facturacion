{% extends 'SonataAdminBundle:CRUD:base_show.html.twig' %} 


{% block navbar_title %}
    {{ 'title_show'|trans({'%name%': admin.toString(object)|u.truncate(100, '...') }, 'SonataAdminBundle') ~ ' orden de Compra "' ~ object.compras.idCompra ~ '"'}}
{% endblock %}

{%- block actions -%}
{%- endblock -%}

{% block tab_menu %}
{% endblock %}

{% block sonata_breadcrumb %}
    <div class="hidden-xs">
        {% if _breadcrumb is not empty or action is defined %}
            <ol class="nav navbar-top-links breadcrumb">
                {% if _breadcrumb is empty %}
                    {% if action is defined %}
                        <li>
                        	<a href="{{ path('sonata_admin_dashboard') }}"><i class="fa fa-home"></i></a>
                        </li>
                        <li>
                        	<a href="{{ path('admin_app_compras_list') }}">Compras</a>
                        </li>
                        <li>
                        	<a href="{{ path('admin_app_compras_show', { 'id': object.compras.id }) }}">{{object.compras.idCompra}}</a>
                        </li>
                        <li>
                        	{{admin.toString(object)|u.truncate(100, '...')}}
                        </li>
                    {% endif %}
                {% else %}
                    {{ _breadcrumb|raw }}
                {% endif %}
            </ol>
        {% endif %}
    </div>
{% endblock sonata_breadcrumb %}
